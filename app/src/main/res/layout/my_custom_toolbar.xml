<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/tool_bar_height"
    android:elevation="3dp">

    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        
        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:id="@+id/goback_action">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:tint="@color/grey_700"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_left_arrow_back"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/toolbar_title"
            android:maxLines="1"
            android:textSize="18dp"
            android:textColor="@color/grey_800"
            android:textStyle="bold"
            android:text="@string/ITEM_CATEGORY"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/menu_items"
        android:layout_alignParentRight="true"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/add_new_category"
            android:clickable="true"
            android:background="@drawable/ripple_white_radial_corner">


        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:tint="@color/colorAccent"
            android:id="@+id/add_icon"
            android:layout_toLeftOf="@+id/add_category_menu_item"
            app:srcCompat="@drawable/ic_add_button"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/add_category_menu_item"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:textSize="16dp"
            android:textColor="@color/colorAccent"
            android:text="@string/ADD_NEW_CATEGORY"/>
        </LinearLayout>
    </RelativeLayout>

    
</RelativeLayout>