<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/ic_user_"
        android:layout_gravity="center"
        android:id="@+id/user_profile_image"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/user_profile_image"
        android:layout_margin="6dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_800"
                android:textSize="14dp"
                android:inputType="textCapSentences"
                android:text="user comment"/>



            <TextView
                android:id="@+id/user_cmt"
                android:textColor="@color/grey_600"
                android:layout_marginTop="5dp"
                android:maxLines="20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user comment fklfjsksff sffkjsf
                s
                fs
                fsf sfsf sf sdf sf sf f sfs f fsf s fs fsdf s"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>